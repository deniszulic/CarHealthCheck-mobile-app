<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detalji">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Željeni datum dolaska"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/datum_detalji_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Datum" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Željeno vrijeme dolaska"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/vrijeme_detalji_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Vrijeme" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status zahtjeva:"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/status_activity_detalji"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/odobreno_activity_detalji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="odobreno" />

                <RadioButton
                    android:id="@+id/odbijeno_activity_detalji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="odbijeno" />

                <RadioButton
                    android:id="@+id/promjenatermina_activity_detalji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="promjenatermina" />

                <RadioButton
                    android:id="@+id/nerješeno_activity_detalji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nerješeno" />

                <RadioButton
                    android:id="@+id/rijeseno_activity_detalji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="rijeseno" />

            </RadioGroup>

            <TextView
                android:id="@+id/novitermin_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prihvaćen novi termin?"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/novitermin_activity_detalji"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/prihvacennovitermin_da"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="da" />

                <RadioButton
                    android:id="@+id/prihvacennovitermin_ne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ne" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lokacija radione"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/selected_activity_detalji"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/pula_activity_detalji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pula" />

                <RadioButton
                    android:id="@+id/zagreb_activity_detalji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zagreb" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ime:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ime_detalji_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ime"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prezime:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/prezime_detalji_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prezime"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresa:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/adresa_detalji_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresa"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grad:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/grad_detalji_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grad"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poštanski broj:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/zip_detalji_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zip"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Broj telefona:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/brtel_detalji_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brtel"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drugi broj telefona:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/brtel2_detalji_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brtel2"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/email_detalji_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/auto_detalji_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Broj pređenih kilometra:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/number_detalji_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Broj"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Godište vozila:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/year_detalji_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Godina vozila"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opis:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tekst_detalji_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opis"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Postavljeno:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/posted_at_detalji_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Postavljeno"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/id_detalji_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Id" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <Button
                android:id="@+id/spremi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="spremi" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>